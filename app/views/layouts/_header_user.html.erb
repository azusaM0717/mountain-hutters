<header class="header">
  <div class="container">
    <div  class="row">
    <a href="/" class="col-auto">
        <%= image_tag "MountainHuttersLogo.png", alt: "MountainHuttersロゴ", style: "width: 150px; height: 150px;" %>
    </a>

    <div class="mt-3 mr-5 text-black">
      <% if user_signed_in? %>
        ようこそ、<%= current_user.name %>さん！
      <% end %>
    </div>

    <nav class="col">
      <ul class="nav-list">
        <% if user_signed_in? %>
          <li class="nav-list-item">
            <%= link_to "マイページ", mypage_path, class: "btn btn-outline-dark" %>
          </li>
          <li class="nav-list-item">
            <%= link_to "検索ページ", search_path, class: "btn btn-outline-dark" %>
