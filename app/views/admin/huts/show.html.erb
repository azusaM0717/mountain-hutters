<h2 class="m-3">山小屋詳細ページ</h2>

<div class="container">
  <div class="row">
    <table class="table no-border">
      <tr>
        <th>山小屋名</th>
        <td><%= @hut.name %></td>
      </tr>
      <tr>
        <th>緯度</th>
        <td><%= @hut.latitude %></td>
      </tr>
      <tr>
        <th>経度</th>
        <td><%= @hut.longitude %></td>
      </tr>
      <tr>
        <th>説明文</th>
        <td><%= @hut.description %></td>
      </tr>
    </table>
  </div>
</div>

<div class="mt-3">
  <%= link_to "編集する", edit_admin_hut_path(@hut.id), class: "btn btn-success m-3" %>
  <%= link_to "山小屋一覧へ戻る", admin_huts_path, class: "btn btn-success" %>
</div>
