<h2 class="m-3">ユーザー一覧</h2>

<div class="container">
  <div class="row">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>会員ID</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th><%= user.id %></th>
            <td><%= link_to user.name, admin_user_path(user) %></td>
            <td><%= user.email %></td>
            <td>
              <%= user.is_active ?
                content_tag(:span, '有効', class: 'text-success') :
                content_tag(:span, '退会', class: 'text-secondary')
              %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
