<h2 class="m-3">コメント一覧</h2>

<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-hover">
        <thead>
          <tr class="table table-secondary">
            <th scope="col">ユーザー名</th>
            <th scope="col">コメント</th>
            <th scope="col">投稿日</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td><%= comment.user.name %></td>
              <td><%= truncate(comment.body, length: 50) %></td>
              <td><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= link_to "削除", admin_comment_path(comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="pagination">
  <%= paginate @comments %>
</div>
