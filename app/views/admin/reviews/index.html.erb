<h2 class="m-3">レビュー一覧(新着順)</h2>

<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-hover">
        <thead>
          <tr class="table table-secondary">
            <th scope="col">ユーザー名</th>
            <th scope="col">山小屋名</th>
            <th scope="col">レビュー本文</th>
            <th scope="col">投稿日</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td><%= review.user.name %></td>
              <td><%= review.hut.name %></td>
              <td><%= truncate(review.body, length: 50) %></td>
              <td><%= review.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= link_to "削除", admin_review_path(review), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="pagination">
  <%= paginate @reviews %>
</div>
