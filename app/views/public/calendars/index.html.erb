<h2 class="m-3">登山スケジュール管理</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 mb-5">
      <div id="calendar"></div>
    </div>
  </div>
</div>

<!-- モーダルのHTML -->
<div class="modal fade" id="createEventModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">登山スケジュールを作成</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="createEventForm">
          <div class="form-group">
            <label for="hutSelect">山小屋</label>
            <select class="form-control" id="hutSelect">
              <% @huts.each do |hut| %>
                <option value="<%= hut.id %>"><%= hut.name %></option>
              <% end %>
            </select>
          </div>
          <div class="form-group">
            <label for="eventStartDate">開始日</label>
            <input type="date" class="form-control" id="eventStartDate">
          </div>
          <div class="form-group">
            <label for="eventEndDate">終了日</label>
            <input type="date" class="form-control" id="eventEndDate">
          </div>
          <button type="submit" class="btn btn-primary">保存</button>
        </form>
      </div>
    </div>
  </div>
</div>