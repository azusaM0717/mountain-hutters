<%- if controller_name != 'sessions' %>
  <%= link_to "登録済みの方はこちらからログイン", new_session_path(resource_name), class: "btn btn-primary mb-2" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "btn btn-primary" %>
<% end %>

