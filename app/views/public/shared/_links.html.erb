<%- if controller_name != 'sessions' %>
  <%= link_to "登録済みの方はこちらからログイン", new_session_path(resource_name), class: "btn btn-success mb-2" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "btn", style: "background-color: #ee7800; color: white;" %>
<% end %>

