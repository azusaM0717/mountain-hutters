<h2 class="m-3"><%= current_user.name %>さんのレビュー一覧</h2>

<div class="container">
  <% if @reviews.any? %>
    <div class="row">
      <% @reviews.each do |review| %>
        <div class="col-md-4 mb-4">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= review.hut.name %></h5>
              <p class="card-text"><%= review.title %></p>
              <%= link_to '詳細を見る', review_path(review), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center mt-4">まだレビューが投稿されていません。</p>
  <% end %>
</div>