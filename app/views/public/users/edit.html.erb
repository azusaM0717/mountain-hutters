<%= render "layouts/error_message", object: @user %>

<div class="d-flex align-items-center justify-content-between m-3 mb-5">
  <div class="d-flex align-items-center">
    <h2 class="mb-0">ユーザー情報編集</h2>
  </div>
    
  <div class="d-flex">
    <%= link_to "退会する", unsubscribe_users_path, class: "btn btn-danger mr-3" %>
  </div>
</div>

<div class="container">
  <%= form_with model: @user, local: true do |f| %>
    <div>
      <%= f.label :ユーザーネーム, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div>
      <%= f.label :メールアドレス, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div>
      <%= f.label :プロフィール画像, class: "form-label" %>
      <%= f.file_field :image, accept: "image/*", class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= f.submit "更新", class: "btn btn-success" %>
    </div>
  <% end %>
  <%= link_to "マイページへ戻る", mypage_path(@user), class: "btn btn-secondary mt-3 mb-3" %>
</div>