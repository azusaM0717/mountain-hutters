<h1>ユーザー情報編集</h1>

<%= form_with model: @user, local: true do |f| %>
  <div>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div>
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div>
    <%= f.label :image, class: "form-label" %>
    <%= f.file_field :image, accept: "image/*", class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :is_active, "ステータス", class: "form-label" %><br>
    <%= f.radio_button :is_active, true, id: "is_active_true" %>
    <%= f.label :is_active, "有効", for: "is_active_true" %>
    <%= f.radio_button :is_active, false, id: "is_active_false" %>
    <%= f.label :is_active, "退会", for: "is_active_false" %>
  </div>

  <div class="mt-3">
    <%= f.submit '更新', class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "マイページへ戻る", mypage_path(@user), class: "btn btn-secondary mt-3 mb-3" %>
